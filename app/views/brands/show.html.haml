- provide :title, @brand.title
%section
  %header.brand_head
    #title
      = logo_tag @brand, :big
      = render "follow_form"
      %p
        %span#followers_count= @brand.followers.count
        人已订阅
    #info
      %h1= @brand.title
      %p= @brand.description
      - if current_user && @brand.edited_by?(current_user)
        %p= link_to "[编辑]", edit_brand_path(@brand)
      = render 'shared/evas', evas: @brand.evas      
    #tags
      %h2 领域
      %ul
        %li= link_to "跑车", "#"
        %li= link_to "日用品", "#"
        %li= link_to "电器", "#"
        %li= link_to "音响", "#"
  %section.brand_publish
    = link_to "发布感受", new_brand_post_path(@brand)+"?type=feeling", "class" => "feeling_pub"
    = link_to "发布评论", new_brand_post_path(@brand)+"?type=review", "class" => "review_pub"
- content_for :script do
  :javascript
    $(Pincool.brandShow);
