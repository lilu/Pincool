%section
  %header
    %h1 新增品牌列表(管理)
  %table
    %tr
      %th= "品牌名称"
      %th= "品牌网址"
      %th= "Logo"
      %th= "创建用户"
    - @brands.each do |brand|  
      %tr
        %td= brand.title
        %td= link_to brand_url(brand), brand_path(brand)
        %td= logo_tag brand, :small 
        %td= link_to brand.founder.name, user_url(brand.founder)
  = paginate @brands
